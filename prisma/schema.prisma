generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Template {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  category    String?
  content     String
  htmlContent String?
  designJson  String?  // Store the full design JSON from Unlayer
  isHtml      Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  usage       Int      @default(0)
}

model Campaign {
  id          Int       @id @default(autoincrement())
  title       String
  subject     String
  content     String
  htmlContent String?   // Store the HTML version of the content
  designJson  String?   // Store the full design JSON from Unlayer
  status      String    @default("draft") 
  sentDate    DateTime?
  openRate    Float?
  clickRate   Float?
  subscribers Int?
  fromEmail   String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model EmailDesign {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  htmlContent String   // The HTML content
  designJson  String   // The full Unlayer design JSON
  category    String   @default("draft")
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}